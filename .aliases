#!/bin/bash

alias cat="bat" # must 'brew install bat' first
alias chmox="chmod -x"
alias gl="git log"
alias gin="git in"
alias gout="git out"
alias grmc="resolve-merge-conflicts"
alias gs="git status"
alias h="heroku"
alias hive="hivemind" # must 'brew install hivemind' first
alias ll="lsd -lahA --group-directories-first" # must have lsd installed
alias notes="$EDITOR ~/Documents/notes"
alias pt="papertrail"
alias resolve-merge-conflicts="git diff --name-only | uniq | xargs $EDITOR"
alias rspec-no-system='echo-then-run bundle exec rspec --exclude-pattern "spec/system/**/*"'
alias rspec-system-only="echo-then-run bundle exec rspec spec/system/"
alias vs="code ."
alias y="yarn"

# Unaliasing g/git alias coming from zsh git plugin
# See .functions for new g functionality
unalias g
